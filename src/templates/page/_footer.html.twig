<footer class="{{ footer_class|default('text-sm') }}">
    <div class="max-w-screen-md p-3 py-10 mx-auto text-center text-gray-500">
        {% block footer %}
            {% include view('/component/alternate_links.html.twig') %}
        {% endblock %}

        {% block extra_footer %}
            {# You are not force to keep this link here, but having a mention to pushword somewhere is welcomed #}
            <small>{{ 'powered_by'|trans }} <a href="https://pushword.piedweb.com" class="hover:text-primary">Pushword</a></small>

            <div class="flex flex-row space-x-4 justify-center mt-3 font-mono">
              {{ link(svg('twitter', {class: 'w-auto h-6 fill-current text-gray-800 hover:text-primary'}), 'https://twitter.com/Robind4', false) }}
              {{ link(svg('github', {class: 'w-auto h-6 fill-current text-gray-800 hover:text-primary'}), 'https://github.com/Pushword/Pushword', false) }}
              {{ link(svg('logo', {class: 'w-auto h-6 fill-current text-gray-800 hover:text-primary'}), 'https://piedweb.com', false) }}
        {% endblock %}
    </div>
</footer>
