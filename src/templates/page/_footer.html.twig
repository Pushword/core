<footer class="{{ footer_class|default('text-sm border-t border-gray-200 dark:border-gray-700 w-full') }}">
    <div class="max-w-screen-md p-3 py-10 mx-auto text-center text-gray-500">
        {% block footer %}
            {% include view('/component/alternate_links.html.twig') %}
        {% endblock %}

        {% block extra_footer %}
            {# You are not force to keep this link here, but having a mention to pushword somewhere is welcomed #}
            <small>{{ 'powered_by'|trans }} <a href="https://pushword.piedweb.com" class="text-primary hover:opacity-75">Pushword</a> âœ• <a href="https://piedweb.com" class="text-primary hover:opacity-75">Pied Web</a></small>
        {% endblock %}
    </div>
</footer>

{% block edit_button %}
    {% if class_exists('\\Pushword\\Admin\\PushwordAdminBundle')
        and class_exists('\\Pushword\\Svg\\PushwordSvgBundle')
        and    is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <a href="{{ path('admin_app_page_edit', {id: page.id}) }}" class="hidden md:block fixed w-10 shadow-lg top-1/2 right-2 mx-3 text-gray-50 bg-gray-500 rounded-full z-10 hover:bg-gray-800 opacity-25">
            {{ svg('edit', {class: 'w-10 p-2 fill-current'}) }}
        </a>
    {% endif %}
    {% endblock %}