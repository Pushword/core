{#
    @params array       logo {class, href, alt},
    @params array       navbar_items {attr:{href...}, anchor, items: [...]} // todo remove next realse the bc break items
    @params string      navbar_container
    @params string      navbar_wrapper_class
    @params string      navbar_nav_class
    @params string      navbar_nav_item_class
    @params string      navbar_nav_item_class_active
    @param bool         navbar_toggler
    @param string       navbar_heigh
#}

{% set navbar_items = navbar_items ?? [
    {'anchor': 'Code &amp; docs', 'attr': {'href': 'https://pushword.piedweb.com'}}
 ] %}

{% set toggle_button = navbar_toggler is defined and navbar_items is defined and navbar_items is not empty %}

{% set navbar_nav_class = navbar_nav_class|default('
    flex
    flex-col overflow-hidden max-h-0 space-y-6 transition-all delay-150 duration-700
    lg:items-center lg:justify-center lg:max-h-full lg:flex-row lg:space-x-6 lg:space-y-0 lg:pt-0
    ') %}

<div class="{{ navbar_wrapper_class|default('absolute top-0 left-0 right-0 z-50 flex flex-col items-center justify-between p-4 border-b-2 border-gray-200 lg:flex-row') }}" id="navbar">
    {{ (navbar_container is defined ? ('<div class="'~navbar_container|default('') ~'">') : '') }}

        {% block logo %}
            <a class="{{ logo.class|default('block mr-1 font-mono text-4xl font-bold text-primary hover:opacity-75') }}" href="{{ logo.href|default(homepage()) }}">{{ logo.alt|default(app_name)|raw }}</a>
        {% endblock %}


        {% block toggle_button %}
            {% if toggle_button %}
            <label class="{{ navbar_toggler_class|default('absolute top-3 lg:hidden right-3 text-primary') }}" type="button" data-toggle="collapse" data-target="#navbar-links" aria-controls="navbar-links" aria-expanded="true" aria-label="Toggle navigation" for="navbar-toggler">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                </svg>
            </label>
            <input type="checkbox" id="navbar-toggler" class="hidden show-hide-input">
            {% endif %}
        {% endblock %}

        {% block nav_list %}
            {% if navbar_items is defined and navbar_items is not empty %}
                <nav id="navbar-links" class="{{ navbar_nav_class }}">
                    {% for item in navbar_items %}
                        {% if is_current_page(item.attr.href, page) %}
                            <span class="text-light {{ (navbar_nav_item_class_active ?? navbar_nav_item_class)|default('text-primary') }}" aria-current="page">
                                {{ item.anchor|raw }}
                            </span>
                        {% else %}
                          {{ link(item.anchor, (item.attr is defined ? item.attr : {})|merge({'class': navbar_nav_item_class|default('text-primary hover:opacity-75')}), item.encrypt ?? false) }}
                        {% endif %}
                    {% endfor %}
                </nav>
            {% endif %}
        {% endblock %}
    {{ (navbar_container is defined ? '</div>' : '') }}
</div>

{% block navbar_extrastyle %}
<style>
    body {
        margin-top: {{ navbar_heigh|default('6rem') }};
    }
</style>
{% endblock %}
