{% block content %}
<div class="{{ page.container|default(apps.get().get('page_container')|default('max-w-screen-sm p-3 pt-12 mx-auto')) }}">
    <div class="{{ page.prose|default(apps.get().get('page_prose')|default('prose max-w-none')) }}">

        {% block h1 %}
            <h1>{{ page.content.h1|raw }}</h1>
        {% endblock %}

        {% block description %}
            {{ page.content.chapeau|raw }}
        {% endblock %}

        {% block main_image %}
            {% if page.mainImage is not null %}
                {% include view('/component/inline_image.html.twig') with {
                        'image_src': page.mainImage|image('default'),
                        'image_alt': page.mainImage.name(page.locale, true)|default(page.getTitle(true)|striptags),
                        'image_wrapper_class': ' ',
                    } %}
            {% endif %}
        {% endblock %}


        {% block main_content %}
            {% if page.toc is not null %}
                {% block toc %}
                    {{ page.content.intro|raw }}
                    <h3>Navigation</h3>
                    {{ page.content.toc|raw }}
                    {{ page.content.content|raw }}
                    {% endblock %}
            {% else %}
                {{ page.content.body|raw }}
            {% endif %}
        {% endblock %}


    </div>
</div>
{% endblock %}
