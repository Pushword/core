{% block content %}
    <div class="{{ page.container|default(container ?? 'max-w-screen-md mx-auto pt-12 p-3 prose prose-sm') }}">

        {% block h1 %}
            <h1>{{ page.content.title(true)|raw }}</h1>
        {% endblock %}

        {% block description %}
            {{ page.content.chapeau|raw }}
        {% endblock %}

        {% block main_image %}
            {% if page.mainImage is not null %}
                {% include view('/component/_inline_image.html.twig') with {
                        'image_src': page.mainImage.fullPath|imagine_filter('default'),
                        'image_alt': page.mainImage.name(page.locale, true)|default(page.getTitle(true)|striptags),
                        'image_wrapper_class': ' ',
                    } %}
            {% endif %}
        {% endblock %}


        {% block main_content %}
            {% if page.toc is not null %}
                {% block toc %}
                    {{ page.content.intro|raw  }}
                    <h3>Navigation</h3>
                    {{ page.content.toc|raw  }}
                    {{ page.content.content|raw  }}
                    {% endblock %}
            {% else %}
                {{ page.content.body|raw }}
            {% endif %}
        {% endblock %}


    </div>
{% endblock %}